<style>
	header {
		import HeaderLink from './HeaderLink.astro';
		import { SITE_TITLE } from '../consts';

		let menuOpen = false;
			<nav>
				<div class="nav-top">
					<h2><a href="/">ali karakoç</a></h2>
					<button class="menu-toggle" aria-label="Menüyü Aç/Kapat" on:click={() => menuOpen = !menuOpen}>
						<svg width="32" height="32" viewBox="0 0 24 24"><path fill="currentColor" d="M3 6h18M3 12h18M3 18h18"/></svg>
					</button>
				</div>
				<div class:list={["internal-links", { open: menuOpen }]}>
					<HeaderLink href="/">anasayfa</HeaderLink>
					<HeaderLink href="/blog">makale</HeaderLink>
					<HeaderLink href="/about">hakkımda</HeaderLink>
				</div>
				<div class="social-links">
					...existing code...
				</div>
			</nav>
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5em;
	}
	.internal-links {
		display: flex;
		gap: 1em;
		align-items: center;
		transition: max-height 0.3s ease;
		position: static;
		background: none;
		box-shadow: none;
		border-radius: 0;
		padding: 0;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		font-size: 1em;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.nav-top {
			width: 100%;
		}
		.menu-toggle {
			display: block;
		}
		.internal-links {
			flex-direction: column;
			gap: 0.5em;
			align-items: flex-start;
			max-height: 0;
			overflow: hidden;
			width: 100%;
			background: white;
			box-shadow: 0 2px 8px rgba(var(--black), 5%);
			position: absolute;
			left: 0;
			top: 100%;
			z-index: 99;
			border-radius: 0 0 8px 8px;
			padding: 0;
		}
		.internal-links.open {
			max-height: 300px;
			padding: 1em 0.5em;
			box-shadow: 0 4px 16px rgba(var(--black), 10%);
		}
		.social-links {
			display: none;
		}
		nav {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5em;
			position: relative;
		}
		nav a {
			padding: 0.5em 0;
			font-size: 1em;
		}
	}
</style>
