---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];
type LayoutProps = Props & { heroVariant?: 'default' | 'profile' };

const { title, description, pubDate, updatedDate, heroImage, heroVariant } = Astro.props as LayoutProps;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 16px;
				box-shadow: 0 10px 30px rgba(0,0,0,0.15);
				object-fit: cover;
				object-position: center top;
				max-height: 480px;
				width: 100%;
			}
			.hero-image.is-profile {
				text-align: center;
				padding: 0.5em 0 0.75em 0;
			}
			.hero-image.is-profile img {
				width: 100%;
				max-width: 420px;
				height: auto;
				object-fit: cover;
				object-position: center top;
				border-radius: 24px;
				box-shadow: 0 12px 36px rgba(0,0,0,0.18);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			
			@media (max-width: 768px) {
				main {
					width: calc(100% - 1em);
					margin: 0 0.5em;
				}
				.prose {
					width: 100%;
					padding: 0.5em;
				}
				.hero-image.is-profile img {
					max-width: 300px;
				}
				.title h1 {
					font-size: 1.8rem;
				}
			}
			@media (max-width: 480px) {
				.hero-image.is-profile img {
					max-width: 250px;
				}
				.title h1 {
					font-size: 1.5rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class={`hero-image ${heroVariant === 'profile' ? 'is-profile' : ''}`}>
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
