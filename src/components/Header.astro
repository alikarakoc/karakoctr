<style>
	header {
		margin: 0;
		padding: 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1.2em;
	}
	h2 a {
		text-decoration: none;
		color: rgb(var(--black));
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	.internal-links {
		display: flex;
		gap: 1.5em;
		align-items: center;
	}
	nav a {
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
		font-size: 1em;
		padding: 0.5em 0;
	}
	nav a.active {
		border-bottom-color: var(--accent);
	}
	.social-links {
		display: flex;
		gap: 1em;
	}
	.social-links a {
		display: flex;
		padding: 0.5em;
		border: none;
	}
	.social-links svg {
		fill: currentColor;
		width: 24px;
		height: 24px;
	}
	@media (max-width: 720px) {
		nav {
			flex-direction: column;
			gap: 1em;
			text-align: center;
		}
		.internal-links {
			flex-direction: column;
			width: 100%;
		}
		.social-links {
			width: 100%;
			justify-content: center;
		}
	}
</style>
